<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.intelligence.allcameratest.CustomViewGroup
        android:id="@+id/custom_view_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <com.intelligence.allcameratest.CustomView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            app:default_size="100dp" />

        <com.intelligence.allcameratest.CustomView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            app:default_size="50dp" />

        <com.intelligence.allcameratest.CustomView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            app:default_size="50dp" />
    </com.intelligence.allcameratest.CustomViewGroup>

    <com.intelligence.allcameratest.CustomDragImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher_background" />

</RelativeLayout>